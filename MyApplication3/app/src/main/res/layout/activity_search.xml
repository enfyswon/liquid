<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="검색한 역"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/subwayText"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="출발역"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/startButton" android:layout_weight="1"/>
            <Button
                    android:text="도착역"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/endButton" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="검색"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/searchButton"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>